import hashlib
import ecdsa
import binascii

# --- 1. Import Libraries & 2. Generate ECDSA Key Pair ---

# Use the SECP256k1 curve (the one used by Bitcoin, a common standard)
# [cite_start]This is a form of Elliptic Curve Cryptography (ECC) [cite: 55]
private_key = ecdsa.SigningKey.generate(curve=ecdsa.SECP256k1)
public_key = private_key.get_verifying_key()

print("--- KEY GENERATION ---")
print(f"Private Key: (secret, not shown)")
print(f"Public Key (hex): {binascii.hexlify(public_key.to_string()).decode('utf-8')}\n")


# --- 3. Hash the Message (SHA-256) ---

# The transaction message to be signed
message = "Ahmed pays 100 coins to Ali"
message_bytes = message.encode('utf-8')

# [cite_start]Hashing creates a unique fixed-size fingerprint (digest) of the message 
# [cite_start]We use SHA-256 as specified 
hash_digest = hashlib.sha256(message_bytes).digest() # Raw bytes for signing
hash_hex = hashlib.sha256(message_bytes).hexdigest() # Hex for printing

print("--- HASHING ---")
print(f"Transaction Message: {message}")
print(f"SHA-256 Hash (hex): {hash_hex}\n")


# --- 4. Sign the Hash (Private Key) ---

# The sender signs the hash with their *private key*
# [cite_start]This proves they are the origin of the transaction (non-repudiation) [cite: 790, 852]
signature = private_key.sign(hash_digest)

print("--- SIGNING ---")
print(f"Signature (hex): {binascii.hexlify(signature).decode('utf-8')}\n")


# --- 5. Verify the Signature (Public Key) ---

# The receiver (or anyone) can use the *public key* to verify the signature
try:
    # The verify function takes the signature and the *original hash*
    is_verified = public_key.verify(signature, hash_digest)
    print("--- VERIFICATION ---")
    print(f"Signature Verified: {is_verified}\n")
    print(">> SUCCESS: The signature is valid. The message is authentic.\n")

except ecdsa.BadSignatureError:
    print("--- VERIFICATION ---")
    print(">> FAILURE: Bad Signature! The message may have been tampered with.\n")


# --- 7. (Analysis) Demonstrate Failure on Tampering ---

print("--- TAMPERING TEST ---")
tampered_message = "Ahmed pays 1 coin to Ali" # Message is changed
tampered_bytes = tampered_message.encode('utf-8')
tampered_hash = hashlib.sha256(tampered_bytes).digest()

print(f"Original Message: {message}")
print(f"Tampered Message: {tampered_message}\n")
print("Verifying *original signature* against *tampered hash*...")

try:
    # This will fail, proving the signature is tied to the exact original message
    public_key.verify(signature, tampered_hash)
    print(">> TEST FAILED (This should not pass)")

except ecdsa.BadSignatureError:
    print(">> TEST SUCCESS: Verification failed as expected.")
    print("   The signature does not match the tampered message.\n")