# RSA Encryption & Demonstration of its Homomorphic Property

import math

# -------------------------------------------------------------
# 1. Generate small RSA key pair
# -------------------------------------------------------------

# a. Choose small prime numbers
p = 11
q = 13

# b. Compute n and Euler’s totient φ(n)
n = p * q
phi = (p - 1) * (q - 1)

# c. Choose public key e and compute private key d
e = 7  # must be coprime with φ(n)

def mod_inverse(a, m):
    """Find modular inverse of a under modulo m"""
    for x in range(1, m):
        if (a * x) % m == 1:
            return x
    return None

d = mod_inverse(e, phi)

# -------------------------------------------------------------
# 2. Implement encryption and decryption functions
# -------------------------------------------------------------

def encrypt(m, e, n):
    """Encrypt message m with public key (e, n)"""
    return pow(m, e, n)

def decrypt(c, d, n):
    """Decrypt ciphertext c with private key (d, n)"""
    return pow(c, d, n)

# -------------------------------------------------------------
# 3. Encrypt two plaintext messages
# -------------------------------------------------------------

m1 = 5
m2 = 9

c1 = encrypt(m1, e, n)
c2 = encrypt(m2, e, n)

# -------------------------------------------------------------
# 4. Demonstrate homomorphic property
# -------------------------------------------------------------

# a. E(m1) and E(m2)
# b. Multiply ciphertexts: E(m1) × E(m2) mod n
c_mult = (c1 * c2) % n

# c. Decrypt the result
decrypted_result = decrypt(c_mult, d, n)

# Expected result: (m1 * m2) mod n
expected_result = (m1 * m2) % n

# -------------------------------------------------------------
# 5. Log all steps and intermediate values
# -------------------------------------------------------------

print("===== RSA Key Generation =====")
print(f"Chosen primes: p = {p}, q = {q}")
print(f"n = p * q = {n}")
print(f"Euler’s Totient φ(n) = (p - 1) * (q - 1) = {phi}")
print(f"Public key (e, n) = ({e}, {n})")
print(f"Private key d = {d}")
print("---------------------------------------------------------")

print("===== Encryption =====")
print(f"Plaintext m1 = {m1}  -> Ciphertext E(m1) = {c1}")
print(f"Plaintext m2 = {m2}  -> Ciphertext E(m2) = {c2}")
print("---------------------------------------------------------")

print("===== Homomorphic Property =====")
print(f"E(m1) × E(m2) mod n = {c_mult}")
print(f"Decrypted result = {decrypted_result}")
print(f"Expected (m1 × m2) mod n = {expected_result}")
print("---------------------------------------------------------")


if decrypted_result == expected_result:
    print(" Homomorphic property verified successfully!")
else:
    print(" Homomorphic property verification failed.")
