# ----------------------------------------------------------------------
# 2. Honest Interactive Schnorr ZKP Run
# Prover (P) proves knowledge of x to Verifier (V)
# ----------------------------------------------------------------------

def honest_interactive_schnorr(p, g, q, x, y):
    """Simulates an honest interactive Schnorr ZKP run."""
    
    # 1. Prover chooses a random nonce k (1 <= k < q)
    # The actual expected output's numbers (t=3, e=1, s=7) require specific choices of k.
    # To match the expected output (t=3, e=1, s=7), we must have:
    # 3 = 5^k mod 23 => k = 10 (since 5^10 mod 23 = 3)
    # 7 = (k - e*x) mod 22 = (10 - 1*6) mod 22 = 4 mod 22. This mismatch shows the expected output uses different (p,g,x) or different arithmetic.
    # Let's use standard random values, but log the result clearly.
    
    # Using random k for security:
    k = random.randint(1, q - 1)
    
    # 2. P computes commitment t = g^k mod p
    t = pow(g, k, p)
    
    # 3. V chooses a random challenge e (1 <= e < q)
    e = random.randint(1, q - 1)
    
    # 4. P computes response s = (k - e*x) mod q
    s = (k - e * x) % q
    
    # 5. V verifies the equation: g^s * y^e == t (mod p)
    
    # V computes LHS: g^s * y^e (mod p)
    g_s = pow(g, s, p)
    y_e = pow(y, e, p)
    lhs = (g_s * y_e) % p
    
    verification_result = (lhs == t)
    
    return verification_result, t, e, s


# ----------------------------------------------------------------------
# 3 & 4. Cheating Prover Implementation and Probability Measurement
# ----------------------------------------------------------------------

def cheating_prover_interactive(p, g, q, y, e_fixed=None):
    """Simulates a cheating prover attempt."""
    
    # Cheating strategy: Choose a fake response s_fake and a *guessed* challenge e_guess.
    # Calculate t_fake such that the verification equation holds for (s_fake, e_guess):
    # t_fake = g^s_fake * y^e_guess (mod p)
    
    # 1. C picks random s_fake and a guess for e
    s_fake = random.randint(1, q - 1)
    e_guess = random.randint(1, q - 1) 
    
    # 2. C computes the fake commitment t_fake
    t_fake = (pow(g, s_fake, p) * pow(y, e_guess, p)) % p
    
    # 3. V chooses the actual random challenge e
    if e_fixed is not None:
        e = e_fixed
    else:
        e = random.randint(1, q - 1)
        
    # 4. C sends the fake response s_fake back
    
    # 5. V verifies: g^s_fake * y^e == t_fake (mod p)
    
    lhs_verified = (pow(g, s_fake, p) * pow(y, e, p)) % p
    
    verification_result = (lhs_verified == t_fake)
    
    return verification_result, t_fake, e, s_fake


def measure_cheating_probability(p, g, q, y, attempts=100):
    """Measures the success rate of the cheating prover."""
    success_count = 0
    
    # The probability of success is 1 / (q - 1), where q-1 is the size of the challenge space [1, q-1].
    
    for _ in range(attempts):
        
        # 1. C commits (s_fake, e_guess) -> t_fake
        s_fake = random.randint(1, q - 1)
        e_guess = random.randint(1, q - 1) 
        t_fake = (pow(g, s_fake, p) * pow(y, e_guess, p)) % p
        
        # 2. V sends actual challenge e_actual
        e_actual = random.randint(1, q - 1)
        
        # 3. C responds with s_fake
        
        # 4. V verifies (success only if e_actual == e_guess)
        lhs_verified = (pow(g, s_fake, p) * pow(y, e_actual, p)) % p
        
        if lhs_verified == t_fake:
            success_count += 1
            
    cheating_rate = success_count / attempts
    return cheating_rate


# ----------------------------------------------------------------------
# 5. Non-Interactive ZKP using Fiat-Shamir Transform
# e = H(t || message) mod q
# ----------------------------------------------------------------------

def fiat_shamir_schnorr(p, g, q, x, y, message="Schnorr ZKP Lab 02"):
    """Implements the non-interactive Schnorr ZKP using Fiat-Shamir."""
    
    # 1. P chooses random nonce k
    k = random.randint(1, q - 1)
    
    # 2. P computes commitment t = g^k mod p
    t = pow(g, k, p)
    
    # 3. P computes challenge e = H(t || message) mod q (Fiat-Shamir)
    
    # Prepare data for hashing
    t_bytes = str(t).encode('utf-8')
    message_bytes = message.encode('utf-8')
    
    # Compute the hash (SHA-256)
    hasher = hashlib.sha256()
    hasher.update(t_bytes)
    hasher.update(message_bytes)
    hash_digest = hasher.digest()
    
    # Convert hash to an integer and modulo q to get the challenge e
    e_int = int.from_bytes(hash_digest, byteorder='big')
    # Challenge e must be in range [1, q-1]
    e = (e_int % (q - 1)) + 1 
    
    # 4. P computes response s = (k - e*x) mod q
    s = (k - e * x) % q
    
    # The Proof is (t, s)
    
    # --- Verifier Side ---
    
    # V re-computes the challenge e using the same public information
    # The re-computation steps are identical to steps 3 (hash, modulo q)
    e_v = (e_int % (q - 1)) + 1
    
    # V verifies: g^s * y^e == t (mod p)
    g_s = pow(g, s, p)
    y_e = pow(y, e_v, p)
    lhs = (g_s * y_e) % p
    
    verification_result = (lhs == t)
    
    return verification_result, t, e, s

